{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": [
      "jest"
    ],
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es2015",
      "es2017",
      "es2018",
      "webworker"
    ]
  },
  "include": [
    "./js/**/*",
    "./test/**/*"
  ]
}
